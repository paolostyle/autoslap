{
  "name": "autoslap",
  "version": "0.4.0",
  "description": "Install and configure ESLint, Prettier, lint-staged and Husky with one command",
  "repository": {
    "type": "git",
    "url": "https://github.com/paolostyle/autoslap"
  },
  "keywords": [
    "autoslap",
    "eslint",
    "husky",
    "prettier",
    "lint-staged",
    "cli",
    "zero-config"
  ],
  "main": "src/index.js",
  "author": "Paweł Dąbrowski <dabrowskip9@gmail.com>",
  "license": "MIT",
  "bin": {
    "autoslap": "./src/index.js"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:dev": "jest --watchAll"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "cross-spawn": "^7.0.1",
    "fs-extra": "^9.0.0",
    "is-git-repository": "^1.1.1",
    "lodash": "^4.17.15",
    "please-upgrade-node": "^3.2.0",
    "update-notifier": "^4.1.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 10
    },
    "rules": {
      "no-console": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{json,md,yml}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100
  }
}
