{
  "name": "autoslap",
  "version": "0.3.0",
  "description": "Install and configure ESLint, Prettier, lint-staged and Husky with one command",
  "repository": {
    "type": "git",
    "url": "https://github.com/paolostyle/autoslap"
  },
  "keywords": [
    "autoslap",
    "eslint",
    "husky",
    "prettier",
    "lint-staged",
    "cli",
    "zero-config"
  ],
  "main": "src/index.js",
  "author": "Paweł Dąbrowski <dabrowskip9@gmail.com>",
  "license": "MIT",
  "bin": {
    "autoslap": "./src/index.js"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:dev": "jest --watchAll"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "cross-spawn": "^6.0.5",
    "fs-extra": "^8.0.1",
    "is-git-repository": "^1.1.1",
    "lodash.has": "^4.5.2",
    "please-upgrade-node": "^3.1.1",
    "update-notifier": "^3.0.0",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 10
    },
    "rules": {
      "no-console": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  }
}
